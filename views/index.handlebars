<body class="">

    <div class="container">


        <h1 class="text1">Eat That Burger!</h1>

        <form class="create-form">
            <div class="form-group">
                <input type="text" id="nb" name="burger_name">
                <button class="btn btn-warning" type="submit" value="Add Burger"><i class="fas fa-hamburger">ADD
                        BURGER</i>
                </button>
            </div>
        </form>

        <div class="row">
            <div class="waitingDevoured col-md-6">
                <h2 class="text1">Burgers that are waiting to be devoured!</h2>

                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}

                    {{/unless}}
                    {{/each}}

                </ul>
            </div>

            <div class="devoured col-md-6">
                <h2 class="text1"> Burgers that are devoured!</h2>

                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-block devoured=false}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>